
[SERVICE]
    Flush        1
    Daemon       Off
    Log_Level    info
    Parsers_File parsers.conf
    HTTP_Server On
    HTTP_Listen 0.0.0.0
    Health_Check On
    HTTP_Port 2020


[INPUT]
    Name             tail
    Path             {{ fluent_file_path }}
    Parser           syslog
    Tag              auth_log
    Refresh_Interval 5
    Skip_Long_Lines  On



[FILTER]
    Name record_modifier
    Match *
    Record hostname ${HOSTNAME}



[OUTPUT]
    Name            es
    Match           *
    Host            {{ elastic_endpoint }}
    Port            9200
    tls             On
    tls.verify      Off  # Set to On if you want to verify the server's certificate
    tls.debug       4
    Logstash_Format On
    Logstash_Prefix {{ index_prefix }}-{{ ansible_play_hosts_all.index(inventory_hostname) }}
    Time_Key        @timestamp
    Time_Key_Format %Y-%m-%dT%H:%M:%S.%L
    Replace_Dots    On
    Trace_Output    On
    Trace_Error     On
    Retry_Limit     False
    HTTP_User       {{ elastic_user }}
    HTTP_Passwd     {{ elastic_password }}
    Suppress_Type_Name On


